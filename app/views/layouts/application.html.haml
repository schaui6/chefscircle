!!! 5
%html
%head
  %title Chef's Circle
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body
  %nav.navbar.navbar-default
    .container
      .navbar-brand= link_to "Chef's Circle", root_path

      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe, new_pin_path
          %li= link_to '<i class="glyphicon glyphicon-cog"></i>'.html_safe, edit_user_registration_path
          %li= link_to '<i class="glyphicon glyphicon-off"></i>'.html_safe,  destroy_user_session_path, method: :delete
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe, new_user_registration_path
          %li= link_to '<i class="glyphicon glyphicon-user"></i>'.html_safe, new_user_session_path
  .container
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert alert-info"
    = yield